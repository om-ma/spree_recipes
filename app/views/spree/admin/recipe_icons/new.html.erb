<%= render 'spree/admin/shared/recipe_tabs', current: :recipe_icons %>
<%= render 'spree/admin/shared/error_messages', target: @object %>

<% content_for :page_title do %>
  <%= Spree.t(:new_icon) %>
<% end %>
<%= form_for [:admin, @recipe, @recipe_icon], as: :recipe_icon, url: spree.admin_recipe_recipe_icons_path(@recipe), html: { multipart: true } do |f| %>
  <fieldset data-hook="new_icon">
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.create'), 'save.svg' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_recipe_recipe_icons_url(@recipe), icon: 'delete.svg', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
